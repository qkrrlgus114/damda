{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es6", "dom"],
      "rootDir": ".",
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es5",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true
    },
    "include": [
      "./src",
      "src/components"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }